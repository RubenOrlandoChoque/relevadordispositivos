<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/zap_title_bar"
        android:scrollbars="none"
        android:background="@drawable/ic_xml_menu_background">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@id/spacer"
                android:layout_width="fill_parent"
                android:layout_height="8.0dip" />

            <LinearLayout
                android:id="@id/lib_menu_holder"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/spacer"
                android:background="@drawable/ic_xml_menu_background"
                android:orientation="vertical"
                android:weightSum="4.0">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_marginLeft="@dimen/menu_more_margin"
                    android:layout_marginRight="@dimen/menu_more_margin"
                    android:layout_marginTop="@dimen/menu_more_margin"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                    <LinearLayout
                        android:id="@id/menu_item_1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/ic_xml_menu_item_background_off"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@id/menu_item_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:background="@drawable/icon_scan"/>

                        <TextView
                            android:id="@id/menu_item_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15.0dip"
                            android:gravity="center"
                            android:textColor="@color/menu_item_text"
                            android:textSize="17.0sp"
                            android:textStyle="bold"
                            android:text="@string/title_opcion_nuevo_ruteo"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/menu_item_2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/ic_xml_menu_item_background_off"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@id/menu_item_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:background="@drawable/icon_anotation"/>

                        <TextView
                            android:id="@id/menu_item_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15.0dip"
                            android:gravity="center"
                            android:textColor="@color/menu_item_text"
                            android:textSize="17.0sp"
                            android:textStyle="bold"
                            android:text="@string/title_opcion_novedad"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="@dimen/menu_more_margin"
                    android:layout_marginRight="@dimen/menu_more_margin"
                    android:background="@color/zapper_border_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_marginLeft="@dimen/menu_more_margin"
                    android:layout_marginRight="@dimen/menu_more_margin"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:weightSum="2.0">

                    <LinearLayout
                        android:id="@id/menu_item_3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/ic_xml_menu_item_background_off"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@id/menu_item_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:background="@drawable/icon_sync"/>

                        <TextView
                            android:id="@id/menu_item_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15.0dip"
                            android:gravity="center"
                            android:textColor="@color/menu_item_text"
                            android:textSize="17.0sp"
                            android:textStyle="bold"
                            android:text="@string/title_opcion_sincronizacion"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/menu_item_4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/ic_xml_menu_item_background_off"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@id/menu_item_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:background="@drawable/icon_configuration"/>

                        <TextView
                            android:id="@id/menu_item_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15.0dip"
                            android:gravity="center"
                            android:textColor="@color/menu_item_text"
                            android:textSize="17.0sp"
                            android:textStyle="bold"
                            android:text="@string/title_opcion_configuracion"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="@dimen/menu_more_margin"
                    android:layout_marginRight="@dimen/menu_more_margin"
                    android:background="@color/zapper_border_color" />



                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="@dimen/menu_more_margin"
                    android:layout_marginRight="@dimen/menu_more_margin"
                    android:background="@color/zapper_border_color" />


                <ImageView
                    android:id="@id/extra_row_image"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginLeft="@dimen/menu_more_margin"
                    android:layout_marginRight="@dimen/menu_more_margin"
                    android:background="@color/zapper_border_color"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@id/extra_row"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip"
                    android:layout_marginBottom="@dimen/menu_more_margin"
                    android:layout_marginLeft="@dimen/menu_more_margin"
                    android:layout_marginRight="@dimen/menu_more_margin"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2.0">

                    <LinearLayout
                        android:id="@id/menu_item_9"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/ic_xml_menu_item_background_off"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@id/menu_item_image"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" />

                        <TextView
                            android:id="@id/menu_item_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15.0dip"
                            android:gravity="center"
                            android:textColor="@color/menu_item_text"
                            android:textSize="17.0sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/menu_item_10"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/ic_xml_menu_item_background_off"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@id/menu_item_image"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" />

                        <TextView
                            android:id="@id/menu_item_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15.0dip"
                            android:gravity="center"
                            android:textColor="@color/menu_item_text"
                            android:textSize="17.0sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@id/border_middle_3rows"
                android:layout_width="1.0dip"
                android:layout_height="302.0dip"
                android:layout_below="@id/spacer"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/menu_more_margin"
                android:layout_marginTop="@dimen/menu_more_margin"
                android:background="@color/zapper_border_color" />

            <ImageView
                android:id="@id/border_3rows"
                android:layout_width="fill_parent"
                android:layout_height="315.0dip"
                android:layout_below="@id/spacer"
                android:layout_margin="@dimen/menu_more_marginm"
                android:background="@drawable/border_options" />

            <ImageView
                android:id="@id/border_middle_4rows"
                android:layout_width="1.0dip"
                android:layout_height="754.0dip"
                android:layout_below="@id/spacer"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/menu_more_margin"
                android:layout_marginTop="@dimen/menu_more_margin"
                android:background="@color/zapper_border_color"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@id/links_row"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_below="@id/lib_menu_holder"
                android:background="@drawable/ic_xml_menu_background">

                <View
                    android:id="@id/view_links_row"
                    android:layout_width="1.0dip"
                    android:layout_height="0.0dip"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@id/txt_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24.0dip"
                    android:layout_toLeftOf="@id/view_links_row"
                    android:text="Acerca de"
                    android:textColor="@color/menu_item_text"
                    android:textSize="17.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/txt_rateme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24.0dip"
                    android:layout_toRightOf="@id/view_links_row"
                    android:text="Calificar"
                    android:textColor="@color/menu_item_text"
                    android:textSize="17.0sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="0.0dip"
                    android:layout_below="@id/txt_about" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@id/zap_title_bar"
        layout="@layout/title_bar" />
</RelativeLayout>