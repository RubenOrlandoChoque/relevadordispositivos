<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".principal.PrincipalActivity">

    <FrameLayout
        android:id="@+id/multimedia_custom_camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         />

    <RelativeLayout
        android:id="@+id/multimedia_custom_camera_header_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/multimedia_custom_camera_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la cámara"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/multimedia_custom_camera_button_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Capturar"
        android:background="#00000000"
        android:src="@drawable/light_device_access_camera"
        />

    <ImageButton
        android:id="@+id/multimedia_custom_camera_button_flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:text="Flash"
        android:background="#00000000"
        android:src="@drawable/light_device_access_flash_on"
        />

    <ImageButton
        android:id="@+id/multimedia_custom_camera_button_flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:text="Girar"
        android:background="#00000000"
        android:src="@drawable/light_device_access_switch_camera"
        />

</RelativeLayout>