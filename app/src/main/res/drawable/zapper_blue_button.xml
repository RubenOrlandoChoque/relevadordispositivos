<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/zapper_button_blue_top" />
            <stroke android:width="1.0dip" android:color="@color/zapper_button_blue_border" />
            <corners android:radius="4.0dip" />
            <padding android:left="6.0dip" android:top="6.0dip" android:right="6.0dip" android:bottom="6.0dip" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient android:startColor="@color/zapper_button_blue_top" android:endColor="@color/zapper_button_blue_bottom" android:angle="270.0" />
            <stroke android:width="1.0dip" android:color="@color/zapper_button_blue_border" />
            <corners android:radius="4.0dip" />
            <padding android:left="6.0dip" android:top="6.0dip" android:right="6.0dip" android:bottom="6.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/zapper_button_disabled_bottom" android:endColor="@color/zapper_button_disabled_bottom" android:angle="270.0" />
            <stroke android:width="1.0dip" android:color="@color/zapper_button_disabled_border" />
            <corners android:radius="4.0dip" />
            <padding android:left="6.0dip" android:top="6.0dip" android:right="6.0dip" android:bottom="6.0dip" />
        </shape>
    </item>
</selector>